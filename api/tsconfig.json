{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"target": "ES6",
		"module": "CommonJS",
		"baseUrl": ".",
		"esModuleInterop": true,
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"strict": true,
		"noImplicitAny": false,
		"noEmit": false,
		"typeRoots": [
			"@types",
			"./node_modules/@types"
		]
	},
	"include": [
		"src/**/*",
		"@types"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.*",
		"test",
		"typings",
		"jest.config.json"
	]
}